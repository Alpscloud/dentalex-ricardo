// Promo
.sect__promo
	position relative
	padding-top 110px
	padding-bottom 220px
	&:before
		pseudo()
		width 2075px
		height 1268px
		position absolute
		top -320px
		left -470px
		background url('../img/lines/promo.svg') 50% no-repeat / contain
		z-index -1
	
.promo-block
	position relative
	&__content
		max-width 640px
		
		.form__wrapper
			margin-bottom 70px
		
		.city
			margin-bottom 60px
			
	&__imgs
		position absolute
		height 100%
		width 570px
		top 0
		right 60px
		z-index -1
		&-main
			border-radius 70px
			overflow-hidden
			width 100%
			height 100%
			img
				display block
				width 100%
				height 100%
				object-fit cover
				position absolute
				position-center()
				
		&-img
			display block
			border 13px solid $accent-color
			border-radius 38px
			position absolute
			z-index 1
			object-fit cover
			&:nth-child(1)
				width 220px
				height 220px
				top -25px
				left -80px
			&:nth-child(2)
				width 200px
				height 200px
				top 55px
				right -60px
			&:nth-child(3)
				width 175px
				height 175px
				right 110px
				bottom -45px
				
		.decor-square
			&:nth-child(1)
				top -25px
				left 220px
			&:nth-child(2)
				top -25px
				right -60px
			&:nth-child(3)
				bottom -80px
				left 220px
				
.decor-square
	display block
	position absolute
	background-color $accent-color
	width 50px
	height 50px
	z-index 1
	border-radius 17.5px
		
.title
	text-transform uppercase
	color $dark-text-color
	font 50px $Bold
	line-height 1
	margin-bottom 40px
	span
		color $accent-color
	
	i
		font 20px $SemiBold
		color $basic-black-color
		display block
		margin-bottom 35px

.course-info
	display flex
	align-items flex-start
	margin-left -50px
	margin-right -50px
	&__item
		text-transform uppercase
		color $accent-color
		font 20px $SemiBold
		padding-left 50px
		padding-right 50px
		&--label
			color $text-color
			font 16px $Med
			margin-bottom 25px
			text-transform none
			
// Speaker
.sect__speaker
	padding-bottom 225px
	background url('../img/lines/speaker.svg') top center no-repeat / contain
	
.speaker
	margin-bottom 210px
	&-information
		order 2
		max-width 530px
		margin-left 60px
		&__list
			li
				position relative
				margin-bottom 20px
				background-color $basic-white-color
				border-radius 15px
				padding 20px 30px 20px 45px
				&:before
					pseudo()
					position absolute
					left -18px
					top 10px
					z-index 1
					background $accent-color url('../img/icons/svg/plus.svg') 50% no-repeat / 10px
					border-radius 50%
					width 36px
					height 36px
				&:last-child
					margin-bottom 0
	&-photos
		order 1
		display flex
		flex-wrap wrap
		align-items flex-end
		margin-left -17.5px
		margin-right -17.5px
		padding-top 70px
		
	&-photo
		flex 1 0 50%
		width 100%
		overflow hidden
		padding-left 17.5px
		padding-right 17.5px
		margin-bottom 35px
		&:last-child
			margin-bottom 0
		img
			display block
			width 100%
			
		&:nth-child(1)
			img
				border-radius 7px 90px 7px 90px
		&:nth-child(2)
			img
				border-radius 60.7px
		&:nth-child(3)
			img
				border-radius 7px 7px 90px 90px
				

.speaker-form
	position relative
	padding-top 130px
	z-index 1
	.form-groups
		width 75%
	.form-submit
		width 25%
	&__content
		max-width 830px
	&__title
		font 35px $SemiBold
		margin-bottom 40px
		max-width 530px
		color $dark-text-color
	&__text
		font-size 24px
		margin-bottom 70px
		
	&__imgs
		position absolute
		z-index -1
		width 415px
		height 570px
		top 0
		right 90px
		border-radius 90px
		background rgb(234,239,246)
		background -moz-linear-gradient(150deg, rgba(213,215,244,1) 10%, rgba(214,216,244,0) 40%, rgba(234,239,245,1) 100%)
		background -webkit-linear-gradient(150deg, rgba(213,215,244,1) 10%, rgba(214,216,244,0) 40%, rgba(234,239,245,1) 100%)
		background linear-gradient(150deg, rgba(213,215,244,1) 10%, rgba(214,216,244,0) 40%, rgba(234,239,245,1) 100%)
		&-main
			width 480px
			position absolute
			vertical-center()
			right 0
		img
			display block
			
			
		.decor-square
			&:nth-child(1)
				width 125px
				height 125px
				top -70px
				right 110px
			&:nth-child(2)
				width 80px
				height 80px
				top 55px
				right -30px
			&:nth-child(3)
				left 130px
				bottom -30px
				
.grad
	width 400px
	height 800px
	outline 1px solid red