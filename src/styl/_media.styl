// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+min-screen(1830px)
	.decor-lines
		background-size contain !important
		width 100% !important
		height 1300px !important
		
	.sect__speaker
		.decor-lines
			margin-left -50%
			
	.sect__prices
		.decor-lines
			margin-left -50%
			

+max-screen(1100px)
	.header__row
		justify-content center
	.btn-hamburger
		display inline-block
		
	.nav
		position fixed
		top 0
		left 0
		width 100%
		height 100vh
		overflow-y auto
		transition all .35s ease-in-out
		background-color $accent-color
		z-index 40
		padding 70px 50px 100px 50px
		opacity 0
		visibility hidden
		pointer-events none
		&.is-opened
			opacity 1
			visibility visible
			pointer-events auto
		.btn-close
			display inline-block
		li
			display block
			margin-right 0
			margin-bottom 30px
			&:last-child
				margin-bottom 0
		a
			color $basic-white-color
	// Promo
	.promo-block
		display flex
		flex-wrap wrap
		
		&__content
			order 1
			margin 0 auto
			text-align center
		&__imgs
			position relative
			height 600px
			right auto
			top auto
			margin 0 auto
			margin-bottom 100px
			
	.course-info
		justify-content center
		
	.js-item-parallax
		transform none !important
		

	// Speaker
	.speaker__row
		flex-wrap wrap
		
	.speaker
		&-information
			width 100%
			max-width 100%
			order 1
			flex none
			padding-left 18px
			margin-left 0
			margin-bottom 60px
		&-photos
			order 2
			width 100%
			padding-top 0
			margin-left 0
			

	// form
	.speaker-form__imgs
		right -30px
		
	// Program
	.program
		padding-left 180px
		
	.form-gallery
		&__row
			align-items flex-end
			margin-bottom 270px
			position relative
			padding-top 260px
			margin-left -15px
			margin-right -15px
			.sect-title
				position absolute
				horisontal-center()
				width 100%
				top 0
				text-align center
				margin-bottom 0
				
		&__title-col,
		&__img-col
			width 50%
			max-width none
			padding-left 15px
			padding-right 15px
			
		&__img-col
			margin-left 0
				
		&__form
			padding-left 0
			padding-right 0
			&-img
				right 0
				
	// prices
	.prices
		padding-right 0
		&__row
			flex-wrap wrap
			
		&__col
			width 100%
			
		.sect-title
			text-align center
			
	.price-block
		width 430px
		margin 0 auto
			
			
	.contacts
		&__col
			max-width none
			margin-top 70px
			min-height 720px
			margin-left 0
			

	.footer
		padding 30px 0
		&__row
			flex-wrap wrap
		&__col
			text-align center
			width 100%
			margin-bottom 20px
			&:last-child
				margin-bottom 0
		
+max-screen(992px)
	// Slider
	.portfolio-slider
		flex-wrap wrap
		align-items flex-start
		&__main
			order 1
			flex none
			width 100%
		&__thumbnails
			flex none
			width 100%
			order 2
			margin-top 30px
			height auto
			
			.slick-list, .slick-slider, .slick-track
				height auto
				
				.slick-slide
					height auto
					padding-bottom 0
				
	.portfolio-thumbnail
		width 100%
		height auto
		padding-right 10px
		.bg
			height auto
			padding-top 50%
			
	.left-gutter
		padding-left 0
		
+max-screen(767px)
	// Sect form
	.speaker-form
		padding-top 0
		&__imgs
			position relative
			right auto
			top auto
			bottom auto
			margin 50px auto 0
		&__title
			margin-bottom 20px
			
		&__text
			margin-bottom 40px
			
	.speaker
		margin-bottom 100px
		

	// program
	.program
		padding-left 0
		&-step__count,
		&-progress
			display none
		&-step
			&__content
				padding 40px
	

	.form-gallery__form-img
		display none
		
	.form-gallery__row
		margin-bottom 100px
		
	// Gallery
	.gallery
		&__row
			display block
			overflow-x scroll
			-webkit-overflow-scrolling touch
			padding-bottom 15px
			white-space nowrap
		&__col
			display inline-block
			width auto !important
			white-space nowrap
		&-item
			padding-top 0
			height 100%
			border-radius 30px
			img
				border-radius 30px
			&__wrapper
				width 260px
				height 400px
				display inline-block
				vertical-align top
				padding-right 10px
			
		

+max-screen(620px)
	body
		font-size 14px
		line-height 17px
		
	.nav-contacts
		display block
		

	.gutter-bottom
		padding-bottom 100px
		
	.sect-title
		font-size 27px
		line-height 1.3
		margin-bottom 40px
		text-align center
		
		
	.sect-uptitle
		font-size 16px
		margin-bottom 10px
		text-align center
	// Promo
	.sect__promo
		padding-top 65px
		padding-bottom 90px
		
	.header
		top 12px
		
	.promo-block
		&:before
			top -710px
			right -630px
		&__content
			max-width 100%
			
		&__imgs
			width auto
			height auto
			padding 15px 30px
			margin-bottom 40px
			
			&-main
				border-radius 28px
				img
					position relative
					transform none
					top auto
					left auto
					
			.decor-square
				&:nth-child(1)
					top 0
					left 120px
				&:nth-child(2)
					right 10px
					top 10px
				&:nth-child(3)
					bottom 0
					left 70px
					
			&-img
				border-width 6px
				border-radius 21px
				&:nth-child(1)
					width 90px
					height 90px
					left 0
					top 0
				&:nth-child(2)
					right 0
					top 60px
					width 80px
					height 80px
				&:nth-child(3)
					right 70px
					bottom -20px
					width 70px
					height 70px
					
	.btn
		margin-bottom 40px
					
	.decor-square
		width 25px
		height 25px
		border-radius 6px
		&-md
			width 50px
			height 50px
		&-lg
			width 75px
			height 75px
		
	.title
		font-size 27px
		line-height 1.3
		margin-bottom 30px
		i
			font-size 16px
			margin-bottom 15px
			
	.course-info
		border 1px solid #e8e8e8
		border-radius 13px
		display block
		margin 0
		padding 20px
		margin-bottom 20px
		&__item
			padding 0 0 20px
			margin-bottom 20px
			display flex
			align-items center
			flex-wrap nowrap
			justify-content space-between
			text-align left
			font-size 16px
			border-bottom 1px solid #e8e8e8
			&--label
				margin-bottom 0
				margin-right 10px
				max-width 90px
				font-size 14px
				width 100%
			&--value
				max-width 120px
			&:last-child
				margin-bottom 0
				padding-bottom 0
				border-bottom none
				

	.city
		border-radius 13px
		font-size 16px
		min-width 190px

		&__ic
			width 35px
			height 35px
			border-radius 10px
			background-size 14px
			margin-right 20px
			
	.promo-block__content .city
		margin-bottom 0
			

	.hidden-mobile
		display none
	.visible-mobile
		display block
		
	@keyframes flying
		0%
			transform translateY(-3px)
		50%
			transform translateY(0)
		100%
			transform translateY(-3px)
	
	.popup__body
		padding 40px 20px
	// Speaker
	.speaker-information
		margin-bottom 30px
	
	
	.speaker-photo
		padding 0 7.5px
		margin-bottom 15px
		&:last-child
			margin-bottom 0
		&:nth-child(1)
			img
				border-radius 7px 40px 
		&:nth-child(2)
			img
				border-radius 40px 
		
		&:nth-child(3)
			img
				border-radius 7px 7px 40px 40px
		
	.speaker-form
		&__title
			font-size 22px
			line-height 26px
			text-align center
		&__text
			font-size 16px
			line-height 19px
			margin-bottom 25px
			text-align center
			
	.form-gallery__title-img 
		.decor-square
			top -30px
				
	.speaker-form__imgs
		width 320px
		height 440px
		margin-top 60px
		&-main
			width 360px
			
		.decor-square
			&:nth-child(1)
				top -10px
				left 50px
			&:nth-child(2)
				top 70px
				right -15px
				
			&:nth-child(3)
				bottom -10px
				left 140px
				
	.sect__speaker
		padding-bottom 100px
		
		.decor-lines
			margin-left 0
			top -200px
			left -200px
		
			
	.form__row
		flex-wrap wrap
		align-items start
		
		.form-groups
			width 100%
			flex-wrap wrap
			margin-bottom 10px
			.form-group
				width 100%
				&:before
					left 15px
					right 15px
					bottom 0
					
					width auto
					top auto
					height 1px
		.form-submit
			width 100%
			padding-left 0
			.btn
				height auto
				margin 0
	
	// portfolio
	.sect__portfolio
		padding-bottom 100px
	.portfolio-slider
		&__thumbnails,
		&__navigation
			margin-top 20px
			
	// Program
	.program-step
		border-width 6px
		&__content
			padding 30px 20px
		&__title
			font-size 18px
			margin-bottom 25px
		&__wrapper
			overflow visible
		&__list
			li
				padding-bottom 15px
				margin-bottom 15px
				padding-left 30px
				ul
					padding-left 10px
		&__gallery
			display block
			white-space nowrap
			overflow-x scroll
			-webkit-overflow-scrolling touch
			border-width 6px
			margin 0
			border none
			padding-top 5px
			padding-bottom 5px
			padding-bottom 10px
			margin-right -26px
			background-color transparent
			&--item
				display inline-block
				vertical-align top
				width 130px
				padding 0 5px
				&:last-child
					padding-right 15px
				
		&__notice
			padding 14px 20px 14px 55px
			&:before
				width 35px
				height 35px
				background-size 40%
				

	.form-gallery__row
		padding-top 0
		flex-wrap wrap
		

		
		.sect-title
			position relative
			transform none
			top auto
			left auto
			margin-bottom 90px
			
	.form-gallery
		&__title-col,
		&__img-col
			width 100%
			flex none
			img
				width 100%
				
		&__title
			&-col
				margin-bottom 40px
			&-img
				max-width 100%
				
	.form-title
		margin-bottom 30px
		text-align center
		font-size 20px
		line-height 24px
	
	// Prices
	.price-block
		width 300px
		padding 25px 0 50px
		&__title
			font-size 18px
			padding 15px 35px
		
		.decor-square
			&:nth-child(1)
				left 20px
				top -10px
			&:nth-child(2)
				right 0
				top 30px
	.prices__col
		.sect-title
			margin-bottom 40px
			
	.contacts-block
		&__content
			text-align center
		&__information
			padding 30px 20px
			font-size 12px
			.row
				flex-wrap wrap
				margin 0
				margin-bottom 30px
				
			&--col
				width 100%
				margin-bottom 15px
				padding-bottom 15px
				border-bottom 1px solid #e8e8e8
				padding-left 0
				padding-right 0
				font-size 16px
				&_label
					font-size 10px
					margin-bottom 5px
				&:last-child
					padding-bottom 0
					border-bottom none
					margin-bottom 0
		
	.contacts__col
		min-height 500px
		
	.price
		font-size 40px
		



			
