.btn
	display inline-block
	padding 12px 15px
	min-height 60px
	font 16px $SemiBold
	line-height 1
	text-align center
	color $basic-white-color
	background-color $accent-color
	border-radius 13.7px
	transition all .17s ease-in-out
	backface-visibility hidden
	box-shadow 0px 10px 30px rgba(39, 70, 207, 0.55)
	&:hover
		background-color darken($accent-color, 10%)
		box-shadow none
	
	&-default
		width 100%
		max-width 190px
		
	&-wide
		width 100%
		padding-left 15px
		padding-right 15px
		
	&-close
		display inline-block
		width 20px
		height 20px
		top 20px
		right 20px
		position absolute
		svg
			svg()
			fill $basic-white-color
			
		
	
		

	&-hamburger
		flex none
		width 30px
		height 30px
		position absolute
		vertical-center()
		right 20px
		display none
		&:before,
		&:after
			pseudo()
			position absolute
			height 2px
			background-color $accent-color
			left 5px
			border-radius 50px
		&:before
			width 20px
			top 10px
		&:after
			width 28px
			bottom 10px
		
		