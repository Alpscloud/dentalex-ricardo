.slider
	&__loader
		position absolute
		fullSize()
		z-index 10
		background-color $light-color
		transition all .15s ease-in-out
		&:before
			pseudo()
			width 30px
			height 30px
			position absolute
			position-center()
			background url('../img/slider-loader.gif') 50% 50% no-repeat / 30px 30px
			
		&.is-loaded
			opacity 0
			visibility hidden
			pointer-events none
			
.swiper-container
	*
		box-sizing border-box
		
.portfolio-slider__navigation
	display flex
	align-items center
	justify-content space-between
	flex-wrap nowrap
	&--btns
		display flex
		align-items center
		flex-wrap nowrap
		width 135px
		justify-content space-between
	&--divider
		display block
		flex 1
		margin 0 30px
		height 1px
		background-color $accent-color
	&--text
		color $dark-text-color
.portfolio-slider__navigation--btn
	display inline-block
	position relative
	background-color $accent-color
	border-radius 17.5px
	width 55px
	height 55px
	flex none
	&:hover
		background-color darken($accent-color, 10%)
		box-shadow none
	svg
		svg()
		width 20px
		height 12px
		fill none
		stroke $basic-white-color
		stroke-miterlimit 10 
		position absolute
		position-center()
		stroke-linecap round
		


.portfolio-slider
	display flex
	flex-wrap wrap
	margin-bottom 30px
	&__main
		flex 1
		min-width 0
		
		
	&__thumbnails
		width 130px
		margin-right 30px
		flex none
		height 500px
		

		.slick-track,
		.slick-slider,
		.slick-list
			height 100% !important
			
			.slick-slide
				height calc(100% / 4)
				padding-bottom 20px
				> div
					height 100%

			
		.slick-current
			.portfolio-thumbnail
				opacity .76
	
		
.portfolio
	&-slide
		display block
		border-radius 27px
	&-thumbnail
		padding-top 0
		height 100%
		border-radius 12.6px
		
		transition opacity .17s ease-in-out