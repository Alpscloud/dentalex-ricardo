



.form
	&-title
		color $dark-text-color
		font 24px $Med
		margin-bottom 50px
	&__wrapper
		background-color $basic-white-color
		padding 20px
		border-radius 22px
		box-shadow 6px 11px 23px rgba(0, 0, 0, 0.08)
	&-groups
		display inline-flex
		flex-wrap nowrap
	
		background-color $secondary-color
		border-radius 13.7px
		overflow hidden
		position relative
		
		
		.form-group
			margin 0
			width 50%
			height 100%
			
	&-submit
		padding-left 10px
	
		.btn
			width 100%
			padding-left 10px
			padding-right 10px
			height 100%
		
	&-input
		display block
		width 100%
		height 60px
		padding 15px
		text-align center
		background-color $secondary-color
		font 16px $Med
		color $text-color
		&:hover,
		&:focus
			border-color $accent-color
		&::-webkit-input-placeholder
			font 16px $Med
			color $text-color
		&::-moz-placeholder
			font 16px $Med
			color $text-color
		&:-moz-placeholder
			font 16px $Med
			color $text-color
		&:-ms-input-placeholder
			font 16px $Med
			color $text-color
			
		
			
	&-group
		position relative
		&:before
			pseudo()
			pointer-events none
			position absolute
			vertical-center()
			right 0
			height 30px
			width 2px
			background-color #d7dfe7
			z-index 1
		&:last-child
			&:before
				display none
			
		&__label
			display inline-block
			margin-bottom 5px
			
	&-textarea
		min-height 200px
	



.form
	&-checkbox
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 2px
			width 16px
			height 16px
			border 1px solid $text-color
			background-position 50% 50%
			background-repeat no-repeat
			background-size 12px 12px
			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:before
							background-color $text-color
							background-image url('../img/icons/svg/checkbox-ic.svg')
							
.form
	&-radio
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 50%
			width 16px
			height 16px
			border 1px solid $text-color
		&:after
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 2px
			top 2px
			width 12px
			height 12px
			border-radius 50%
			background-color $text-color
			display none
			

			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:after
							display block


